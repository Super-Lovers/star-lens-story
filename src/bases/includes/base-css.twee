h1,
h2,
h3,
h4,
h5,
h6 {
    margin-top: 5px;
    margin-bottom: 0;

    font-weight: normal;
}

.macro-link {
    color: #e43f5a;
}

a {
    text-decoration: none !important;
}

.macro-link:hover {
    color: lightcoral;
}

pre {
    padding-top: 5px;
    padding-bottom: 5px;

    /* background-color: rgba(0, 0, 0, 0.5); */
    
    border-radius: 5px;
}

pre > code {
    font-family: "Cozette";
    font-size:  calc(0.4em + 0.7vw);

    color: #e43f5a;
}

.glitch-text {
    /* TODO: Make glitch text more glitchy */
    font-weight: bold;
}

/**************************************
CHOICES CONSOLE
**************************************/
#choices-screen {
    background-image: url('./assets/UI/bottomconsole_fixed.png');

    width: 60%;
    height: 219px;

    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;

    display: flex;
    justify-content: center;
    flex-direction: column-reverse;

    background-position: center bottom;
    background-color: transparent;
}

textarea {
    overflow: none;
    resize: none;

    box-sizing: border-box;
    width: 100%;

    background-color: #c5c5c5;
    color: black;
    opacity: 0.8;

    border: none;
    border-radius: 5px;
    pointer-events: none;
}

textarea:not(:disabled):focus,
textarea:not(:disabled):hover {
    opacity: 1;
    background-color: #c5c5c5;
    color: black;
}

#choices-screen > span > span > .macro-button, #choices-screen > .macro-button {
    display: block;

    margin-left: auto;
    margin-right: auto;
    margin-bottom: 10px;
    padding: 10px;

    width: 60%;

    background-color: transparent;
    border: none;
    background-image: url('./assets/UI/longbutton_selected.png');
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;

    font-family: "Cordata";
    font-size: calc(0.4em + 0.7vw);
    border: none;
}

#choices-screen > span > span > .macro-button:hover, #choices-screen > .macro-button:hover {
    opacity: 0.7;
    /* background-image: url('./assets/UI/longbutton_selected.png'); */
}

/**************************************
SCROLL BAR FOR THE MAIN CONSOLE
**************************************/
.passage-content::-webkit-scrollbar {
    width: 10px;
    height: 10px;

    background-color: rgba(0, 0, 0, 0.4);

    border-radius: 5px;
}

.passage-content::-webkit-scrollbar-thumb {
    background-color: rgba(0, 100, 255, 0.6);

    border-radius: 5px;
}

/**************************************
TEXT STYLES
**************************************/
@-webkit-keyframes shudder {
	50% {
		-webkit-transform: translateX(0.2em);
		transform: translateX(0.2em)
	}
}
@keyframes shudder {
	50% {
		-webkit-transform: translateX(0.2em);
		transform: translateX(0.2em)
	}
}
.shudder {
	-webkit-animation: shudder linear 0.1s 0s infinite;
	animation: shudder linear 0.1s 0s infinite;
	display: inline-block;
}
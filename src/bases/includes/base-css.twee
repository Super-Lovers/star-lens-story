h1,
h2,
h3,
h4,
h5,
h6 {
    margin-top: 5px;
    margin-bottom: 0;

    font-weight: normal;
}

.macro-link {
    color: #e43f5a;
}

.macro-link:hover {
    color: lightcoral;
}

a {
    text-decoration: none !important;
}

.mirror > .link-internal {
    color: #e43f5a;
}

.mirror > .link-internal:hover {
    color: lightcoral;
}

pre {
    padding-top: 5px;
    padding-bottom: 5px;

    /* background-color: rgba(0, 0, 0, 0.5); */
    
    border-radius: 5px;
}

pre > code {
    font-family: "Cozette";
    font-size:  calc(0.4em + 0.7vw);

    color: #e43f5a;
}

.glitch-text {
    /* TODO: Make glitch text more glitchy */
    font-weight: bold;
}

/**************************************
CHOICES CONSOLE
**************************************/
#choices-screen {
    background-image: url('./assets/UI/bottomconsole_fixed.png');

    width: 60%;
    height: 219px;

    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;

    display: -webkit-box;

    display: -ms-flexbox;

    display: flex;
    -webkit-box-pack: center;
        -ms-flex-pack: center;
            justify-content: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: reverse;
        -ms-flex-direction: column-reverse;
            flex-direction: column-reverse;

    background-position: center bottom;
    background-color: transparent;
}

textarea {
    overflow: none;
    resize: none;

    -webkit-box-sizing: border-box;

            box-sizing: border-box;
    width: 100%;

    background-color: #c5c5c5;
    color: black;
    opacity: 0.8;

    border: none;
    border-radius: 5px;
    pointer-events: none;
}

textarea:not(:disabled):focus,
textarea:not(:disabled):hover {
    opacity: 1;
    background-color: #c5c5c5;
    color: black;
}

#choices-screen > span > span > .macro-button, #choices-screen > .macro-button {
    display: none;

    margin-left: auto;
    margin-right: auto;
    margin-bottom: 10px;
    padding: 5px 10px;

    width: 70%;

    background-color: transparent;
    border: none;
    background-color: #3693fa;

    font-family: "Cordata";
    font-size: calc(0.4em + 0.7vw);
    line-height: 18px;
    border: 2px solid #1871d4;
    border-radius: 5px;

    -webkit-transition: 0.3s ease;

    -o-transition: 0.3s ease;

    transition: 0.3s ease;
}

#choices-screen > span > span > .macro-button:hover, #choices-screen > .macro-button:hover {
    opacity: 0.7;
    /* background-image: url('./assets/UI/longbutton_selected.png'); */
}

/**************************************
SCROLL BAR FOR THE MAIN CONSOLE
**************************************/
.passage-content::-webkit-scrollbar {
    width: 10px;
    height: 10px;

    background-color: rgba(0, 0, 0, 0.4);

    border-radius: 5px;
}

.passage-content::-webkit-scrollbar-thumb {
    background-color: rgba(0, 100, 255, 0.6);

    border-radius: 5px;
}
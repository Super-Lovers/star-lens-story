:: base-styles [stylesheet]

/**************************************
IMPORTS
**************************************/
@font-face {
    font-family: "VT323";
    src: url("./fonts/VT323-Regular.ttf");
}

@font-face {
    font-family: "Cozette";
    src: url("./fonts/cozette.woff");
}

@font-face {
    font-family: "Cordata";
    src: url("./fonts/cordata_ppc.woff");
}

/**************************************
ABSTRACTS
**************************************/
.screen {
    margin-left: auto;
    margin-right: auto;
    padding: 15px;

    color: #ffffff;
    background-color: #ffffff;
    background-size: contain;
    background-repeat: no-repeat;
    background-color: rgba(255, 255, 255, 1);

    font-size: calc(0.5em + 0.7vw);
}

.wallpaper {
    position: absolute;
}

/**************************************
PASSAGES CONSOLE
**************************************/
#console-screen {
    background-image: url('./assets/UI/mainconsole_fixed.png');

    position: relative;

    background-position: center top;
    background-size: contain;
    background-color: transparent;

}

